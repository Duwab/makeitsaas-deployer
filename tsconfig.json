{
  "compilerOptions": {
    "target": "es2017",
    "module": "commonjs",
    "outDir": "./dist",
    "strict": true,
    "baseUrl": "./app",
    "moduleResolution": "node",
    "strictPropertyInitialization": false, // test
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "paths": {
      "@entities": [
        "repository/entities"
      ],
      "@entities/*": [
        "repository/entities/*"
      ]
    }
  }
}
